<resources>

    <!-- < v21 specific code -->
    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="AppTheme.Base" parent="MaterialDrawerTheme.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarAppTheme</item>
        <item name="colorPrimary">@color/background_purple</item>
        <item name="colorPrimaryDark">@color/notification_bar</item>
        <item name="colorAccent">@color/light_green</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.Base">
        <item name="android:background">@color/background_purple</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/background_purple</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>
</resources>
